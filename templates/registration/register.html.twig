{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h1 class="ui header">Register</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'ui form'}}) }}
                {{ form_errors(registrationForm) }}
        <input type="hidden" name="registration_form" value="{{ csrf_token('registration') }}">

        <div class="field">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'ui input'}}) }}
        </div>

        <div class="field">
            {{ form_label(registrationForm.plainPassword, 'Password') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'ui input'}}) }}
        </div>

        <div class="field">
            {{ form_label(registrationForm.roles, 'Roles') }}
            {{ form_widget(registrationForm.roles, {
            }) }}
        </div>

        

        <button type="submit" class="ui primary button">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}